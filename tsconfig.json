{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "target": "es2020",
    "lib": [
      "es2020",
      "dom"
    ],
    "resolveJsonModule": true,
    "removeComments": true,
    "module": "commonjs",
    "sourceMap": true,
    "incremental": true,
    "outDir": "lib"
  },
  "exclude": [
    "node_modules",
    "src/ui"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
